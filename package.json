    "svelte": "^5.46.4",
    "svelte-check": "^4.2.1",
    "svelte-hero-icons": "^5.2.0",
    "tailwindcss": "^3.4.19",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.33.1",
    "vite": "^7.3.1",
    "vitest": "^4.0.17"
  },
  "lint-staged": {
    "*.js": "eslint --cache --fix",
