{
  "engines": {
    "node": ">=22"
  },
  "name": "jukelab",
  "version": "0.0.1",
  "scripts": {
    "dev": "vite dev",
    "build": "vite build",
    "preview": "vite preview",
    "test": "npm run test:integration && npm run test:unit -- --run",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
